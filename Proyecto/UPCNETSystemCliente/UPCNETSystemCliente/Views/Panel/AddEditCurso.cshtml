@model UPCNETSystemCliente.ViewModel.Panel._AddEditCurso
@{
    ViewBag.Title = "Curso";
    Model.Modo = Model.IDCurso == "" ? "Nuevo" : "Editar";

}

<form role="form" method="post" action="@Url.Action("AddEditCurso","Panel")">


    <div class="form-group">
        <label>Modo</label>
        @Html.TextBoxFor(x => x.Modo, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group">
        <label>Id del curso</label>
        @Html.TextBoxFor(x => x.IDCurso, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Nombre</label>
        @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Ciclo del curso</label>
        @Html.TextBoxFor(x => x.CicloDeCurso, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Máximo de Inasistencias</label>
        @Html.TextBoxFor(x => x.MaxInasistencia, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Id del profesor</label>
        @Html.TextBoxFor(x => x.IDProfesor, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save"></i> Guardar
    </button>
    <a href="@Url.Action("MantenimientoCurso","Panel")" class="btn btn-default">
        <i class="fa fa-arrow-circle-o-left"> Cancelar</i>
    </a>
</form>