@model UPCNETSystemCliente.ViewModel.Panel._AddEditHorario
@{
    ViewBag.Title = "Horarios";
    Model.Modo = Model.IDHorario == "" ? "Nuevo" : "Editar";

}



<form role="form" method="post" action="@Url.Action("AddEditHorario","Panel")">


    <div class="form-group">
        <label>Modo</label>
        @Html.TextBoxFor(x => x.Modo, new { @class = "form-control", @readonly = "readonly" })
    </div>
    <div class="form-group">
        <label>Id del Horario</label>
        @Html.TextBoxFor(x => x.IDHorario, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Id del curso</label>
        @Html.TextBoxFor(x => x.IDCurso, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Dia</label>
        @Html.TextBoxFor(x => x.Dia, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Hora de Inicio</label>
        @Html.TextBoxFor(x => x.HoraIni, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Hora Final</label>
        @Html.TextBoxFor(x => x.HoraFin, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save"></i> Guardar
    </button>
    <a href="@Url.Action("MantenimientoHorario","Panel")" class="btn btn-default">
        <i class="fa fa-arrow-circle-o-left"> Cancelar</i>
    </a>
</form>